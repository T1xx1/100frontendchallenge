---
import { Image } from "astro:assets";

import photo1 from "./photo1.webp";
import photo3 from "./photo3.jpeg";
import photo4 from "./photo4.jpg";
import photo5 from "./photo5.jpeg";
---

<div
   class="bg-orange-500 bg-opacity-50 rounded-2xl py-10 w-full flex justify-center"
>
   <div class="bg-white rounded-2xl p-5 flex gap-5">
      <div class="w-1/2 space-y-5">
         <h2 class="text-orange-500 text-2xl text-center font-medium">Hotel booking</h2>

         <form class="w-full space-y-5 text-sm">
            <div class="flex gap-2">
               <fieldset class="w-full space-y-1">
                  <legend class="font-medium">Check in</legend>

                  <input
                     type="date"
                     class="bg-gray-200 bg-opacity-50 rounded-lg px-3 py-2 w-full"
                  />
               </fieldset>

               <fieldset class="w-full space-y-1">
                  <legend class="font-medium">Check out</legend>

                  <input
                     type="date"
                     class="bg-gray-200 bg-opacity-50 rounded-lg px-3 py-2 w-full"
                  />
               </fieldset>
            </div>

            <div class="flex gap-2">
               <fieldset class="w-full space-y-1">
                  <legend class="font-medium">Adults</legend>

                  <select
                     class="bg-gray-200 bg-opacity-50 rounded-lg px-3 py-2 w-full"
                  >
                     <option>1</option>
                     <option>2</option>
                     <option>3</option>
                     <option>4</option>
                     <option>5</option>
                  </select>
               </fieldset>

               <fieldset class="w-full space-y-1">
                  <legend class="font-medium">Children</legend>

                  <select
                     class="bg-gray-200 bg-opacity-50 rounded-lg px-3 py-2 w-full"
                  >
                     <option>0</option>
                     <option>1</option>
                     <option>2</option>
                     <option>3</option>
                     <option>4</option>
                  </select>
               </fieldset>
            </div>

             <div class="flex gap-2">
               <fieldset class="w-full space-y-1">
                  <legend class="font-medium">Rooms</legend>

                  <select
                     class="bg-gray-200 bg-opacity-50 rounded-lg px-3 py-2 w-full"
                  >
                     <option>1</option>
                     <option>2</option>
                     <option>3</option>
                     <option>4</option>
                     <option>5</option>
                  </select>
               </fieldset>

               <fieldset class="w-full space-y-1">
                  <legend class="font-medium">Beds</legend>

                  <select
                     class="bg-gray-200 bg-opacity-50 rounded-lg px-3 py-2 w-full"
                  >
                     <option>1</option>
                     <option>2</option>
                     <option>3</option>
                     <option>4</option>
                     <option>5</option>
                  </select>
               </fieldset>
            </div>

            <button
               type="button"
               class="bg-orange-500 rounded-full py-2 w-full text-white font-medium"
               >Book your room</button
            >
         </form>
      </div>

      <div class="w-1/2 flex flex-col gap-2">
         <Image
            src={photo5}
            alt="Photo"
            class="rounded-lg w-full object-cover"
         />

         <div class="w-full flex gap-2 justify-center">
            <Image
               src={photo1}
               alt="Photo"
               class="rounded-lg h-20 w-1/3 object-cover"
            />
            <Image
               src={photo3}
               alt="Photo"
               class="rounded-lg h-20 w-1/3 object-cover"
            />
            <Image
               src={photo4}
               alt="Photo"
               class="rounded-lg h-20 w-1/3 object-cover"
            />
         </div>
      </div>
   </div>
</div>
